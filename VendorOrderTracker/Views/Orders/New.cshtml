@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron text-center">
    <h1>Add a new order to @Model.Name</h1>
  </div>
  <form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <div>
      <label for="orderTitle">Title</label>
      <input id="orderTitle" name="orderTitle" type="text" placeholder="Enter Order Title" required>
    </div>
    <div>
      <label for="orderTitle">Description</label>
      <br>
      <textarea rows="5" cols="50" id="description" name="description" type="text" placeholder="Enter Order Description"></textarea>
    </div>
    <div>
      <label for="orderPrice">Price</label>
      <input id="orderPrice" name="orderPrice" type="text" placeholder="Enter Order Price" required>
    <div>
      <label for="orderDate">Date</label>
      <input id="orderDate" name="orderDate" type="text" placeholder="Enter Order Date" required>
    </div>
    <button type='submit'>Add Order</button>
  </form>
</div>